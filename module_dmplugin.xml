<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dmplugin" default="compile.module.dmplugin">
  <dirname property="module.dmplugin.basedir" file="${ant.file.module_dmplugin}"/>
  
  <property name="module.jdk.home.dmplugin" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dmplugin" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dmplugin" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dmplugin" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="dmplugin.output.dir" value="${module.dmplugin.basedir}/out/production/DmPlugin"/>
  <property name="dmplugin.testoutput.dir" value="${module.dmplugin.basedir}/out/test/DmPlugin"/>
  
  <path id="dmplugin.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dmplugin.module.production.classpath">
    <path refid="${module.jdk.classpath.dmplugin}"/>
    <path refid="library.darkbot.classpath"/>
  </path>
  
  <path id="dmplugin.runtime.production.module.classpath">
    <pathelement location="${dmplugin.output.dir}"/>
    <path refid="library.darkbot.classpath"/>
  </path>
  
  <path id="dmplugin.module.classpath">
    <path refid="${module.jdk.classpath.dmplugin}"/>
    <pathelement location="${dmplugin.output.dir}"/>
    <path refid="library.darkbot.classpath"/>
  </path>
  
  <path id="dmplugin.runtime.module.classpath">
    <pathelement location="${dmplugin.testoutput.dir}"/>
    <pathelement location="${dmplugin.output.dir}"/>
    <path refid="library.darkbot.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.dmplugin">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dmplugin">
    <patternset refid="excluded.from.module.dmplugin"/>
  </patternset>
  
  <path id="dmplugin.module.sourcepath">
    <dirset dir="${module.dmplugin.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dmplugin" depends="compile.module.dmplugin.production,compile.module.dmplugin.tests" description="Compile module DmPlugin"/>
  
  <target name="compile.module.dmplugin.production" depends="register.custom.compilers" description="Compile module DmPlugin; production classes">
    <mkdir dir="${dmplugin.output.dir}"/>
    <javac2 destdir="${dmplugin.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dmplugin}/javac">
      <compilerarg line="${compiler.args.dmplugin}"/>
      <bootclasspath refid="dmplugin.module.bootclasspath"/>
      <classpath refid="dmplugin.module.production.classpath"/>
      <src refid="dmplugin.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dmplugin"/>
    </javac2>
    
    <copy todir="${dmplugin.output.dir}">
      <fileset dir="${module.dmplugin.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dmplugin.tests" depends="register.custom.compilers,compile.module.dmplugin.production" description="compile module DmPlugin; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dmplugin" description="cleanup module">
    <delete dir="${dmplugin.output.dir}"/>
    <delete dir="${dmplugin.testoutput.dir}"/>
  </target>
</project>